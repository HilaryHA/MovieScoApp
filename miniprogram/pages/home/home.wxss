.my-home {
  height: 300rpx;
  display: flex;
  padding: 10px;
  border-bottom: 1px dashed #d3d1d1;
}

.cont-img {
  width: 200rpx;
  height: 100%;
  margin-right: 10rpx;
}

.cont-info {
  flex: 1;
  font-size: 30rpx;
  padding:10rpx 0 0 10rpx;
}

.cont-title {
  font-size: 40rpx;
  padding-bottom: 10rpx;
  color: #666;
  font-weight: 700;
}

.cont-star {
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}

.star-tit {
  line-height: 42rpx;
}

.star-cont {
  display:inline-block;
  line-height:12px;
  color: rgb(63, 61, 61);
  font-weight: 500;
}

.audience-score {
  color: #faaf00;
}

.btn-assess {
  position:relative;
  left:380rpx;
  bottom:42rpx;
}