/* miniprogram/pages/info/info.wxss */
.my-info {
  margin: 0;
  padding: 0;
}

.detail-container {
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
  filter: blur(40rpx);
  opacity: .4;
}

.detail-mask {
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #000;
  z-index: -1;
}

.head-info {
  width: 100%;
  height: 380rpx;
  display: flex;
  padding: 10rpx;
}

.head-img {
  width: 300rpx;
  height: 100%;
}

.right-info {
  flex: 1; /* 保证右边可以占据剩下的宽度 */
  font-size: 28rpx;
  color: #FFF;
  margin-left: 10rpx;
  line-height: 70rpx;
}

.right-tit {
  font-size: 38rpx;
  font-weight: 700;
}

.right-score {
  font-size: 32rpx;
  color: #ffa244;
}

.cont-desc {
  font-size: 22rpx;
  padding: 10rpx;
}

.van-button--warning {
  margin-bottom: 10rpx;
}

.up-cont {
  width: 100%;
  padding: 0 10rpx;
}

.up-img {
  width: 200rpx;
  height: 180rpx;
  padding-right: 20rpx;
}

.my-rating {
  text-align:center;
  padding:10rpx;
  border-bottom:1px dashed #ccc;
  border-top:1px dashed #ccc;
  margin:10rpx 0;
}

.rat-text {
  font-size:28rpx;
  color:#323232;
}

.mark-upimg {
  margin:10rpx 0;
}